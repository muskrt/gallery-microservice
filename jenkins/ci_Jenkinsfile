pipeline 
{
    agent any
    stages 
    {
        stage('Build')
        {
            steps
            {
                echo 'Building..'
                sh './Dev-build-packages.sh'
            }
        }
        stage('Test')
        {
            steps 
            {
                echo 'Testing..'
                sh './Dev-generate-coverage.sh'
            }
        
        }
        stage('Building Docker Images')
        {
            steps 
            {
                echo 'Image Building..'
                sh './Dev-build-docker-images.sh'
            }
        
        }
        stage('Pushing Images To Registry')
        {
            steps 
            {
                echo 'Pushing Images..'
                sh './Dev-push-images-to-registry.sh'
            }
        
        }
        stage('Extracting Test Results...')
        {
            steps
            {
                echo "publishing unit test report..."
                cobertura coberturaReportFile: '*/coverage.xml'
            }
              
        }
    }
}
